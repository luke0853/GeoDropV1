{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/backup_cleanup/**",
      "**/Backups/**",
      "**/*.backup",
      "**/*.bak",
      "**/test-*.html",
      "**/demo-*.html",
      "**/*-separated.html",
      "**/zeilenrezeptbuch.readme",
      "**/SECURITY-AUDIT-2025.md",
      "**/DEPLOYMENT-README.md",
      "**/FIREBASE-RULES-SETUP.md",
      "**/ROADMAP-2025.md",
      "**/SECURITY.md",
      "**/config/README.md",
      "**/config/AWS-SETUP.md",
      "**/dataconnect/**",
      "**/whitepaper_alt.html"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
